@model List<NPGeek.Web.Models.Park>
@using System.Text.RegularExpressions;

@{
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Regex reg = new Regex("National Park");
}

@foreach (var park in Model)
{
    park.Name = reg.Replace(park.Name, "");
    <div class="parkContainer">
        <a class="park-link" href="@Url.Action("ParkDetail", "Home", park)"></a>
        <div class="image-holder">
            <img class="park-image" src="~/Content/Images/parks/@(park.ParkCode.ToLower()).jpg" />
            <div class="park-name-and-national">
                <div class="park-name-and-national-interior">
                    <h2 class="park-name">@park.Name</h2>
                    <h5 class="national-park">National Park</h5>
                </div>
            </div>
            <p class="park-description">@park.Description</p>
            </div>
        </div>
}